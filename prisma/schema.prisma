generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Define the User Roles
enum UserRole {
  SUPER_ADMIN // Can do everything + pay teachers
  ADMIN       // Can register users + take attendance
  TEACHER     // Can view own shifts + get paid
  STUDENT     // Can pay + attend
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  phone     String?
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  
  // New Relation: A student can have multiple enrollments (e.g., Begena AND Masinko)
  enrollments Enrollment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Existing Branch Model
model Branch {
  id        String   @id @default(uuid())
  name      String
  location  String
  currency  String   @default("ETB")
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 3. NEW: Courses (The 4 Categories)
model Course {
  id          String   @id @default(uuid())
  name        String   // "Begena", "Krar", "Washint", "Masinko"
  enrollments Enrollment[]
}

// 4. NEW: Shifts (Dynamic Time Slots)
model Shift {
  id          String   @id @default(uuid())
  name        String   // "Afternoon Shift 1"
  startTime   String   // "16:30"
  endTime     String   // "18:00"
  enrollments Enrollment[]
}

// 5. NEW: Enrollment (Links Student + Course + Shift)
model Enrollment {
  id        String   @id @default(uuid())
  
  studentId String
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
  
  shiftId   String
  shift     Shift    @relation(fields: [shiftId], references: [id])
  
  active    Boolean  @default(true)
  
  // An enrollment has many attendance records (one per day)
  attendance Attendance[]
}

// 6. NEW: Attendance Record
model Attendance {
  id            String      @id @default(uuid())
  date          DateTime    // The specific day
  status        AttendanceStatus
  
  enrollmentId  String
  enrollment    Enrollment  @relation(fields: [enrollmentId], references: [id])

  recordedBy    String      // ID of Admin who took attendance
  createdAt     DateTime    @default(now())

  @@unique([date, enrollmentId]) // Prevent double marking for same class same day
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

