generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Define the User Roles
enum UserRole {
  SUPER_ADMIN // Can do everything + pay teachers
  ADMIN       // Can register users + take attendance
  TEACHER     // Can view own shifts + get paid
  STUDENT     // Can pay + attend
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  avatar    String?
  email     String   @unique
  password  String
  phone     String?
  role      UserRole @default(STUDENT)
  isActive  Boolean  @default(true)
  
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  
  // New Relation: A student can have multiple enrollments (e.g., Begena AND Masinko)
  enrollments Enrollment[]

  teacherShiftId    String?
  teacherShift      TeacherShift? @relation(fields: [teacherShiftId], references: [id])
  teacherAttendance TeacherAttendance[] // Track their daily clock-ins

  baseSalary        Float     @default(0.0) // Monthly Salary
  bankName          String?
  bankAccountNumber String?
  bankCode          String? 

  // NEW: Relations
  paymentsMade      Payment[] // Students paying
  payrollsReceived  Payroll[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bank {
  id        String   @id @default(uuid())
  name      String   // e.g. "Commercial Bank of Ethiopia"
  code      String   // e.g. "9"
  createdAt DateTime @default(now())
}

model TeacherShift {
  id        String   @id @default(uuid())
  name      String   
  startTime String   
  endTime   String   
  workDays  DayOfWeek[]
  teachers  User[]
}


model TeacherAttendance {
  id        String   @id @default(uuid())
  date      DateTime 
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  status    AttendanceStatus // PRESENT, ABSENT, LATE
  
  checkIn   DateTime?        // When they started
  checkOut  DateTime?        // NEW: When they finished
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Track manual edits

  @@unique([date, userId])
}

// 2. Existing Branch Model
model Branch {
  id        String   @id @default(uuid())
  name      String
  location  String
  currency  String   @default("ETB")
  
  // NEW: Geolocation coordinates
  latitude  Float?   // e.g. 9.005401
  longitude Float?   // e.g. 38.763611
  
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 3. NEW: Courses (The 4 Categories)
model Course {
  id          String   @id @default(uuid())
  name        String   // "Begena", "Krar", "Washint", "Masinko"

  enrollments Enrollment[]
   prices      CoursePrice[]
}

model PricingPlan {
  id          String   @id @default(uuid())
  name        String   // e.g. "3 Months (Standard)"
  duration    Int      // Duration in months (e.g. 3)
  daysPerWeek Int      // e.g. 3
  
  coursePrices CoursePrice[]
  enrollments  Enrollment[]
}

// 2. THE JUNCTION TABLE (Specific Price per Class per Plan)
model CoursePrice {
  id            String   @id @default(uuid())
  amount        Float    @default(0.0) // The Monthly Fee (e.g. 1000)
  
  courseId      String
  course        Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  pricingPlanId String
  pricingPlan   PricingPlan @relation(fields: [pricingPlanId], references: [id], onDelete: Cascade)

  @@unique([courseId, pricingPlanId]) // Ensure only one price exists for this combo
}

model Payment {
  id          String   @id @default(uuid())
  studentId   String
  student     User     @relation(fields: [studentId], references: [id])
  
  amount      Float
  currency    String   @default("ETB")
  
  // What are they paying for?
  month       Int      // e.g. 1 for January
  year        Int      // e.g. 2026
  reason      String   // "Tuition Fee - Begena"

  // Chapa Fields
  txRef       String   @unique // Our internal Reference
  chapaTxId   String?  // Chapa's Reference
  status      PaymentStatus @default(PENDING)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Payroll {
  id          String   @id @default(uuid())
  teacherId   String
  teacher     User     @relation(fields: [teacherId], references: [id])
  
  amount      Float
  month       Int
  year        Int

  transferRef String?
  
  status      PayrollStatus @default(PENDING)
  paidAt      DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum PayrollStatus {
  PENDING
  PROCESSED // Meaning we sent the money
}

// 4. NEW: Shifts (Dynamic Time Slots)
model Shift {
  id          String   @id @default(uuid())
  name        String   // "Afternoon Shift 1"
  startTime   String   // "16:30"
  endTime     String   // "18:00"
  enrollments Enrollment[]
}

model Enrollment {
  id        String   @id @default(uuid())
  
  studentId String
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])
  
  shiftId   String
  shift     Shift    @relation(fields: [shiftId], references: [id])

  pricingPlanId String?
  pricingPlan   PricingPlan? @relation(fields: [pricingPlanId], references: [id])
  
  programType  ProgramType @default(THREE_MONTHS)
  selectedDays DayOfWeek[] // This stores ["MONDAY", "WEDNESDAY", etc.]
  
  active    Boolean  @default(true)
  attendance Attendance[]
}

// 2. Define the Program Types
enum ProgramType {
  THREE_MONTHS // 5 Days
  SIX_MONTHS   // 3 Days
  NINE_MONTHS  // 2 Days
}

// 3. Define Days
enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

// 6. NEW: Attendance Record
model Attendance {
  id            String      @id @default(uuid())
  date          DateTime    // The specific day
  status        AttendanceStatus
  
  enrollmentId  String
  enrollment    Enrollment  @relation(fields: [enrollmentId], references: [id])

  recordedBy    String      // ID of Admin who took attendance
  createdAt     DateTime    @default(now())

  @@unique([date, enrollmentId]) // Prevent double marking for same class same day
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

